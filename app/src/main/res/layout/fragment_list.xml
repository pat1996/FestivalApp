<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cost_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_main"
        android:layout_gravity="center"
        android:text="@string/cost_overview"
        style="?android:attr/buttonBarButtonStyle"
        android:textSize="25dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="340dp"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/new_cost_button"
            android:layout_below="@+id/content_main"
            android:paddingRight="45dp"
            android:text="@string/total_cost"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/total_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/new_cost_button"
            android:layout_below="@+id/content_main"
            android:text="@string/total_price"
            android:background="@color/colorAccent"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>