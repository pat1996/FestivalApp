<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainFestivalActivity"
    tools:showIn="@layout/app_bar_main_festival">
    <EditText
        android:id="@+id/enter_date_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_date_hint"
        android:inputType="date"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate_remaining_days_btn"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:text="@string/calculate_remaining_days_btn"
        />
</LinearLayout>