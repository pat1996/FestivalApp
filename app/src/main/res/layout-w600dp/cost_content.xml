<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_list"
        android:name="com.example.patri.festivalapp.CostList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/cost_list" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_content"
        android:name="com.example.patri.festivalapp.ContentFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fragment_list"
        android:layout_toRightOf="@+id/fragment_list"
        tools:layout="@layout/cost_add" />

</RelativeLayout>